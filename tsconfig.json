{
  "$schema": "https://json.schemastore.org/tsconfig",
  "docs": "https://bun.sh/docs/typescript",
  "extends": "@tsconfig/bun",
  "compilerOptions": {
    "module": "Preserve",

    "useDefineForClassFields": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "plugins": [
      {
        "name": "typescript-svelte-plugin",
        // the following options can be set additionally; they are optional; their default values are listed here
        "enabled": true, // enables this plugin
        "assumeIsSvelteProject": false // if true, skip detection and always assume it's a Svelte project
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte",
    "build.ts",
    "svelte-plugin.ts",
    "svelte-preload.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
